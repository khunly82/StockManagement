@model LoginFormViewModel

@{
    ViewBag.Title = "Login";
}

<form method="post" asp-antiforgery="true">
    <div class="form-horizontal">
        <div class="form-group mb-3">
            <label class="control-label col-md-12" asp-for="Email"></label>
            <div class="col-md-12">
                <input type="email" class="form-control" asp-for="Email" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>

        <div class="form-group mb-3">
            <label class="control-label col-md-12" asp-for="Password"></label>
            <div class="col-md-12">
                <input type="password" class="form-control" asp-for="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>

        <div class="form-group mb-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Se connecter" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a href="@Url.Action("AskResetPassword", "Authentication")">J'ai oublié mon mot de passe</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}