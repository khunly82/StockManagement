@{
    LinkViewModel[] links = [
            new (){ Title = "Clients", Icon = "fa fa-users", Controller = "Customer" },
            new (){ Title = "Produits", Icon = "fa fa-tags", Controller = "Product" },
            new (){ Title = "Commandes", Icon = "fa fa-file-alt", Controller = "Order" },
    ];

    if (User.IsInRole("Admin"))
    {
        links = [
            new (){ Title = "Dashboard", Icon = "fa fa-pie-chart", Controller = "Dashboard" },
            new (){ Title = "Clients", Icon = "fa fa-users", Controller = "Customer" },
            new (){ Title = "Produits", Icon = "fa fa-tags", Controller = "Product" },
            new (){ Title = "Commandes", Icon = "fa fa-file-alt", Controller = "Order" },
        ];
    }

    string? currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
    string? currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
}

<nav>
    <ul>
        @foreach (var link in links)
        {
            <li class="@(currentController == link.Controller ? "active" : "")">
                <a href="@Url.Action(link.Action, link.Controller, new { Area = link.Area })">
                    <i class="menu-icon @link.Icon"></i>@link.Title
                </a>
            </li>
        }
    </ul>
</nav>